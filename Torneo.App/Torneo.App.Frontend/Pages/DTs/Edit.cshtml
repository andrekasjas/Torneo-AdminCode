@page
@model Torneo.App.Frontend.Pages.Dts.EditModel
@{
}
<h1>Editar Director Tecnico</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="DT.Id"></label>
        <input asp-for="DT.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="DT.Nombre"></label>
        <input asp-for="DT.Nombre"  maxlength="20" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DT.Documento"></label>
        <input asp-for="DT.Documento" type="number" min="1" max="999999999999" pattern="^[0-9]+" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DT.Telefono"></label>
        <input asp-for="DT.Telefono" type="number" min="1" max="9999999999" pattern="^[0-9]+" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar DT</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>